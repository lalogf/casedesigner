<div class="container">
	<div class="row">
		<div class="col-md-6">
			<%= bootstrap_form_for(@user) do |f|%>

			<%= f.text_field(:firstname, placeholder: "First name") %>
			<%= f.text_field(:lastname, placeholder: "Last name") %>
			<%= f.text_field(:email, placeholder: "hello@email.com") %>
			<%= f.password_field(:password, placeholder: "password", help: "Must be at least 6 characters long") %>
			<%= f.text_field(:quote, placeholder: "Select a quote for your store") %>
			<%= f.file_field(:avatar) %>
			<%= f.submit  "Submit", class: "btn btn-success" %>

			<%end%>
		</div>
	</div>
</div>