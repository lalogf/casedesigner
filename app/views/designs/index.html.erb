<div class="container">
	<div class="row">
		<h1>Excellent designs</h1>
		<p>Choose which one you want to use to create a new case</p>
		<% @design.each do |link|%> 
			<div class="col-md-3">
				<div class="col-md-12">
					<%= image_tag link.image.url(:thumb), :id => 'what'%>
				</div>
				<div class="col-md-12">
					<a href="/users/<%= link.user_id %>/products/new" name="<%= link.id %>"class="btn btn-primary createprod">Create case</a>
				</div>
			</div>
		<% end %>
	</div>
</div>



