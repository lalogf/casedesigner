<div class="container">
	<div class="row">
		<h4>Welcome <%=@user.firstname %>, please upload a new design</h4>
		<div class="col-md-6">

			<%= bootstrap_form_for [@user, @design] do |f| %>

			<%= f.file_field(:image) %>
			
			<%= f.text_area(:description, placeholder: "Describe your design") %>
			
			<%= f.submit  "Submit", class: "btn btn-success" %>

			<%end%>
		</div>
	</div>
</div>




